<div class="splitcontent">
  <div class="splitcontentleft">
    <%= field_for :shelter_type do |key, label| %>
      <%= label_tag{label} %>
      <%= f.select("#{key}_eq", options_for_select(@shelter_const[key.to_s].invert, @search.shelter_type_eq),:include_blank => true) %>
    <% end %>
    
    <%= field_for :area do |key, label| %>
      <%= label_tag{label} %>
      <%= f.select("#{key}_eq", options_for_select(@area.invert, @search.area_eq),:include_blank => true) %>
    <% end %>
    
    <%= field_for :usable_flag do |key, label| %>
      <%= label_tag{label} %>
      <%= f.select("#{key}_eq", options_for_select(@shelter_const[key.to_s].invert, @search.usable_flag_eq),:include_blank => true) %>
    <% end %>
    
    <%= field_for :opened_at do |key, label| %>
      <%= label_tag{label} %>
      <%= f.text_field "#{key}_gte", :value => @search.opened_at_gte, :size=>'10' %><%= calendar_for("search_#{key}_gte") %>
      ～
      <%= f.text_field "#{key}_lte", :value => @search.opened_at_lte, :size=>'10' %><%= calendar_for("search_#{key}_lte") %>
    <% end %>
  </div>
  
  <div class="splitcontentright">
    <%= field_for :name do |key, label| %>
      <%= label_tag{label} %>
      <%= f.text_field "#{key}_like", :value => @search.name_like %>
    <% end %>
    
    <%= field_for :openable_flag do |key, label| %>
      <%= label_tag{label} %>
      <%= f.select("#{key}_eq", options_for_select(@shelter_const[key.to_s].invert, @search.openable_flag_eq),:include_blank => true) %>
    <% end %>
    
    <%= field_for :closed_at do |key, label| %>
      <%= label_tag{label} %>
      <%= f.text_field "#{key}_gte", :value => @search.closed_at_gte, :size=>'10' %><%= calendar_for("search_#{key}_gte") %>
      ～
      <%= f.text_field "#{key}_lte", :value => @search.closed_at_lte, :size=>'10' %><%= calendar_for("search_#{key}_lte") %>
    <% end %>
    <%= field_for :status do |key, label| %>
      <%= label_tag{label} %>
      <%= f.select("#{key}_eq", options_for_select(@shelter_const[key.to_s].invert, @search.status_eq),:include_blank => true) %>
    <% end %>
  </div>
</div>

