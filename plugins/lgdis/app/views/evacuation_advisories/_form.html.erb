<%= error_messages_for 'evacuation_advisory' %>
<div class="splitcontent">
  <div class="splitcontentleft">
    <%= field_for :area, :required => true do |key, label| %>
      <%= label_tag{label} %>
      <%= f.text_field key,:size=>'50',:disabled => @disabled %>
    <% end %>
    
    <%= field_for :area_kana do |key, label| %>
      <%= label_tag{label} %>
      <%= f.text_field key,:size=>'50',:disabled => @disabled %>
    <% end %>
    
    <%= field_for :district do |key, label| %>
      <%= label_tag{label} %>
      <%= f.select key, options_for_select(@area.invert, f.object.send(key)),{:include_blank => true},:disabled => @disabled %>
    <% end %>
    
    <%= field_for :sort_criteria, :required => true do |key, label| %>
