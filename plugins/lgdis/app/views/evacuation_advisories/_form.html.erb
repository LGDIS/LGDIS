    <% end %>
  </div>

  <div class="splitcontentright">
    <%= field_for :issued_at do |key, label| %>
      <%= label_tag{label} %>
      <%= f.text_field :issued_date,:size=>'10',:disabled => @disabled %><%= calendar_for("#{f.object_name}_issued_date") unless @disabled %>
