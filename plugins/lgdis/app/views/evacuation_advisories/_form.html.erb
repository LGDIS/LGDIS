    <% end %>
    
    <%= field_for :lifted_at do |key, label| %>
      <%= label_tag{label} %>
      <%= f.text_field :lifted_date,:size=>'10',:disabled => @disabled %><%= calendar_for("#{f.object_name}_lifted_date") unless @disabled %>
